<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    >

    <android.support.design.widget.TextInputLayout
        android:id="@+id/dang_nhap_ten_text_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <android.support.design.widget.TextInputEditText
            android:id="@+id/dang_nhap_ten_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Địa chỉ email"
            android:paddingLeft="10dp"
            />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:passwordToggleEnabled="true"
        >
        <android.support.design.widget.TextInputEditText
            android:id="@+id/dang_nhap_mat_khau_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mật khẩu"
            android:paddingLeft="10dp"
            android:inputType="textPassword"
            />
    </android.support.design.widget.TextInputLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quên mật khẩu"
        android:textSize="15sp"
        android:gravity="right"
        android:textColor="#0011ff"
        android:layout_marginTop="20dp"
        />
    <Button
        android:id="@+id/dang_nhap_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Đăng nhập"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_orange_dark"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hoặc đăng nhập bằng"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:textSize="15sp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Facebook"
            android:textAllCaps="false"
            android:textColor="#0011ff"
            android:background="@drawable/custom_button_dang_nhap_facebook"
            android:layout_marginRight="20dp"
            />
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Google"
            android:textAllCaps="false"
            android:textColor="#0011ff"
            android:background="@drawable/custom_button_dang_nhap_google"
            />
    </LinearLayout>
</LinearLayout>